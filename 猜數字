#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void main(void)
{
	int num[4], ans[4], i, j, k,o,r,a=-1,b,n;
	srand(time(NULL));
	r = 0;
	while (r < 4)
	{
		k = rand() / (float)32767 * 10;
		o = 0;
		for (i = 0; i < 4; i++)
		{
			if (ans[i] == k) { o = 1; break; }
		}
		if (o == 0) { ans[r] = k; r++; }
	}

	k = 1;
	while (a != 4) {
		a = 0; b = 0; n = 0;
		printf("第%d次 猜數字:", k);
		scanf_s("%d", &n);
		o = 0;
		for (i = 3; i >= 0; i--)
		{
			num[i] = n % 10;
			o = o * 10 + n % 10;
			n = n / 10;
		}
		for (i = 0; i < 4; i++)
		{
			printf("%d", num[i]);
		}
		printf("	");
		if (num[0] == 0 && num[1] == 0 && num[2] == 0 && num[3] == 0) {
			printf("ANS=");
			for (i = 0; i < 4; i++)
			{
				printf("%d ", ans[i]);
			}
			printf("\n\n");
		}
		else {
			for (i = 0; i < 4; i++)
			{
				for (j = 0; j < 4; j++)
				{
					if (num[i] == ans[j])
					{
						if (i == j)
						{
							a++;
						}
						else
						{
							b++;
						}
					}
				}
			}
			printf("%dA%dB	", a, b);
			if (a == 4) { printf("you win\n\n"); }
			else { printf("try again\n\n"); }
			k++;
		}
	}
	

	system("PAUSE");
}

